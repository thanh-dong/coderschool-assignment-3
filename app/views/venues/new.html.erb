<div class="row create-event">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(Venue.new, html: {class: "new-event"})  do |f| %>
        <div class="form-group">
          <%= f.text_field 'name', class: 'form-control', placeholder: 'Name'%>
        </div>
        <div class="form-group">
          <%= f.text_field 'full_address', class: 'form-control', placeholder: 'Address'%>
        </div>
        <div class="form-group">
          <%=f.select(:region, {}, {}, {:class => 'form-control'}) do%>
              <% if @regions.count > 0 %>
                  <% @regions.each do |region| %>
                      <%= content_tag(:option, region.name, value: region.id) %>
                  <% end %>
              <% end %>
          <% end %>
        </div>
        <div class="form-group">

          <%= f.submit 'Create', class: 'btn btn-block btn-success' %>
          <%= link_to 'Cancel', root_path , class: "btn btn-block btn-danger", style: 'width: 100%;' %>
        </div>
    <% end %>
  </div>
</div>